<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="IconStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="IconStyleView">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="IconDetailLike">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ImageBookVertical">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@drawable/shape_img</item>
        <item name="android:elevation">4dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>


    <style name="imgDetailBook">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="BottomNavigationIconStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/color_selected_nav</item>
        <item name="itemTextColor">@color/color_selected_nav</item>
        <item name="itemIconSize">30dp</item>
    </style>

</resources>