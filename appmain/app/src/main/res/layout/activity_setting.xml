<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle"
    tools:context=".Activity.Setting">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="409dp"
        android:layout_height="74dp"
        android:background="@drawable/background"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Setting"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.196">

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="47dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/change"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/pen" />

            <TextView
                android:id="@+id/change_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đổi mật khẩu "
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="47dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/share"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/share" />

            <TextView
                android:id="@+id/share_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chia sẻ tới bạn bè"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="47dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/night"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nightmode" />

            <TextView
                android:id="@+id/night_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="Chế độ ban đêm" />

            <ImageView
                android:id="@+id/switchbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/switchbtn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="47dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/broom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/broom" />

            <TextView
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dọn dẹp bộ nhớ"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="47dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đánh giá truyện"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="47dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/trash"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/trash" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xóa tài khoản"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="47dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/logout" />

            <TextView
                android:id="@+id/log_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đăng xuất"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

